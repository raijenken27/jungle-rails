<section class="user-signup">
  <header class="page-header">
    <h1>Create an Account</h1>
  </header>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_for :user, url: '/users' do |f| %>

        <div class="f-group">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: 'f-control' %>
        </div>

        <div class="f-group">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: 'f-control' %>
        </div>

        <div class="f-group">
          <%= f.label :email %>
          <%= f.text_field :email, class: 'f-control' %>
        </div>
        
        <div class="f-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'f-control' %>
        </div>

        <div class="f-group">
          <%= f.label "Confirm Password" %>
          <%= f.password_field :password_confirmation, class: 'f-control' %>
        </div>

        <%= f.submit 'Create', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

</section>